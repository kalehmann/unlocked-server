{% extends 'base.html.twig' %}

{%
set menu = [
  {
    'class': 'icon-client',
    'title': 'unlocked.client',
    'url': path('clients_list'),
  },
  {
    'class': 'icon-key',
    'title': 'unlocked.key',
    'url': path('keys_list'),
  },
  {
    'class': 'icon-request',
    'title': 'unlocked.request',
    'url': path('requests_list'),
  },
  {
    'class': 'icon-user',
    'title': 'unlocked.user',
    'url': '#',
  },
]
%}
{% block page %}
<header>
  <span class="unlocked-title">{{ 'unlocked.title'|trans }}</span>
  <a class="clickable unlocked-requests" href="{{ path('requests_list') }}">{{ activeRequests() }} active requests</a>
</header>

<nav>
  <ul>
    {% for entry in menu %}
    <li><a class="menu-item" href="{{ entry.url }}">
        <span class="menu-icon {{ entry.class }}"></span>
        <span class="menu-text">{{ entry.title|trans() }}</span></a></li>
    {% endfor %}
  </ul>
</nav>
{% block content %}

{% endblock %}
{% endblock %}
